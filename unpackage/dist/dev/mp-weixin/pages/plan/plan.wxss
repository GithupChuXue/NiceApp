.content {
  width: 730rpx;
  margin: 30rpx 10rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.content .content-item {
  width: 690rpx;
  height: 400rpx;
  margin-top: 85rpx;
  line-height: 400rpx;
  text-align: center;
}
.content .content-item:first-child {
  width: 85%;
  height: 70rpx;
  margin: 0 auto;
  border: 1px solid #999;
  border-radius: 10rpx;
  line-height: 70rpx;
  text-align: center;
}
.content .content-item:first-child .uni-form-item input {
  display: flexbox;
  height: 70rpx;
  line-height: 70rpx;
}
.content .content-item:first-child .uni-form-item input:hover {
  outline: none;
  color: rgba(82, 168, 236, 0.8);
  border-color: rgba(82, 168, 236, 0.8);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 10px rgba(82, 168, 236, 0.6);
}
.content .item {
  border-top: 2px solid #666;
}
.content .item ._h2 {
  margin-top: -230rpx;
  margin-left: -470rpx;
  font-size: 35rpx;
  color: #999;
  margin-bottom: 15rpx;
}
